@(rct: Receta)
<id>@rct.id</id>
<name>@rct.nombre</name>
<preparacion>@rct.preparacion</preparacion>
<publicante>@usuarioinfo(rct.publicante)</publicante>
<rating>@rct.extra.rating</rating>
<fechaPublicacion>@rct.extra.fechaPublicacion</fechaPublicacion>
<ingredientes>
    @for(ingrd <- rct.ingredientes) {
        <ingrediente>
            @ingredienteinfo(ingrd)
        </ingrediente>
    }
</ingredientes>

<favoritos>
    @for(user <- rct.favoritos) {
        <usuario>
            @usuarioinfo(user)
        </usuario>
    }
</favoritos>

<reviews>
    @for(review <- rct.reviews) {
        <review>
            <nota>@review.nota</nota>
            <autor>@usuarioinfo(review.autor)</autor>
        </review>
    }
</reviews>
